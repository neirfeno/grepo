{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@neirfeno/*": ["packages/*/src"]
    }
  }
} 